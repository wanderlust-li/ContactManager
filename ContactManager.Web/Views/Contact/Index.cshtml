@model IEnumerable<ContactManager.Models.Contact>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Contact" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Contact
            </a>
        </div>
    </div>
    <br/><br/>

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Surname
            </th>
            <th>
                Email
            </th>
            <th>
                Phone Number
            </th>
            
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.Surname
                </td>
                <td width="30%">
                    @obj.Email
                </td>
                <td width="30%">
                    @obj.PhoneNumber
                </td>
                <td>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Contact" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Contact" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-x"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>